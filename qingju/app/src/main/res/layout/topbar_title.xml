<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="15dp"
    android:id="@+id/ln_title"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    android:weightSum="7">

    <RelativeLayout
        android:id="@+id/view_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_title_left"
            android:gravity="center"
            android:padding="5dp"
            android:text="郑州"
            android:textColor="@color/touming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/iv_title_left"

            android:src="@mipmap/shangcheng_xiala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_title_left"
            android:layout_toEndOf="@+id/tv_title_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:textSize="20sp"/>

        <EditText
            android:background="@drawable/shape_sousuo"
            android:id="@+id/et_title"
            android:drawableLeft="@mipmap/shangcheng_sousuo"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:drawablePadding="10dp"

            android:paddingStart="10dp"
            android:hint="输入关键字"
            android:textColorHint="@color/touming"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:src="@mipmap/shangcheng_xiaoxi"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/iv_title_right"

            android:src="@mipmap/shangcheng_dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_title_right"
            android:layout_toEndOf="@+id/tv_title_right"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />
    </RelativeLayout>

</LinearLayout>
