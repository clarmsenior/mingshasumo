<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_house"
                android:src="@mipmap/shangcheng_fangchan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="房产"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_electrical"
                android:src="@mipmap/shangcheng_dianqi"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="电器"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_car"
                android:src="@mipmap/shangcheng_qiche"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="汽车"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_baihuo"
                android:src="@mipmap/shangcheng_baihuo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="百货"/>
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
           <ImageView
               android:layout_marginTop="10dp"
               android:id="@+id/iv_yifu"
               android:src="@mipmap/shangcheng_fuzhaung"
               android:layout_width="48dp"
               android:layout_height="48dp"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="服装"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
           <ImageView
               android:layout_marginTop="10dp"
               android:id="@+id/iv_water"
               android:src="@mipmap/shangcheng_jiushui"
               android:layout_width="48dp"
               android:layout_height="48dp"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="酒水"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
           <ImageView
               android:layout_marginTop="10dp"
               android:id="@+id/iv_zhubao"
               android:src="@mipmap/shangcheng_zhubao"
               android:layout_width="48dp"
               android:layout_height="48dp"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="珠宝"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:orientation="vertical">
           <ImageView
               android:layout_marginTop="10dp"
               android:id="@+id/iv_yule"
               android:src="@mipmap/shangcheng_yule"
               android:layout_width="48dp"
               android:layout_height="48dp"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" android:gravity="center" android:padding="0dp" android:text="娱乐"/>
       </LinearLayout>
   </LinearLayout>

</LinearLayout>

